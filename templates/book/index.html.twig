{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
        {% for room in room %}
            <!-- Page Content -->
            <div class="container">
            <!-- Portfolio Item Heading -->
            <h1 class="my-4">{{ room.name }}
                <small>Room: {{ room.room_nr }}</small>
            </h1>
            <!-- Portfolio Item Row -->
            <div class="row">
                <div class="col-md-8">
                    <img class="img-fluid" src={{ vich_uploader_asset(room, 'imageFile') }}><br>
                </div>
                <div class="col-md-4">
                    <h3 class="my-3">Beschrijving</h3>
                    <p>{{ room.description }}</p>
                    <h3 class="my-3">Project Details</h3>
                    <ul>
                        <li>Aantal bedden: {{ room.bed }}</li>
                        <li>Mini Koelkast</li>
                        <li>Schitterend uitzicht</li>
                    </ul>
                    {% if is_granted('ROLE_USER', 'ROLE_ADMIN') %}
                    <h3 class="my-3">Book room</h3>
                    {{ include ("book/_form.html.twig") }}
                    {% else %}{% endif %}
                </div>
            </div>
            <!-- /.row -->
        {% endfor %}
    </div>
{% endblock %}
