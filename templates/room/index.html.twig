{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ImageName</th>
                <th>Id</th>
                <th>Room_nr</th>
                <th>Price</th>
                <th>Bed</th>
                <th>Description</th>
                <th>Available</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td><img src={{ vich_uploader_asset(room, 'imageFile') }} width="200px"></td>
                <td>{{ room.id }}</td>
                <td>{{ room.roomNr }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.bed }}</td>
                <td>{{ room.description }}</td>
                <td>{{ room.available ? 'Yes' : 'No' }}</td>
                <td>{{ room.name }}</td>
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('room_new') }}">Create new</a>
{% endblock %}
